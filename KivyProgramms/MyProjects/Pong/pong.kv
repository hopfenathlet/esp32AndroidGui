#:kivy 1.0.9

<PongGame>:
    ball: pong_ball
    playerLeft: player_left
    playerRight: player_right

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.playerLeft.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.playerRight.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    Player:
        id: player_left
        x: root.x + 20
        center_y: root.center_y

    Player:
        id: player_right
        x: root.width - self.width - 20
        center_y: root.center_y

<Pongball>:
    size: 30, 30
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Player>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size